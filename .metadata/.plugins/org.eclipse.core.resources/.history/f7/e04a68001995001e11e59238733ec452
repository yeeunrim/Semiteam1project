$(document).ready(function() {
    $('#mainMenu ul li').hover(
        function() {
            // 마우스 오버 시
            $('#bottomMenu').show(); // 하단 카테고리 박스 표시
            $('#topMenu').css('background-color', 'rgb(238, 238, 238)'); // 배경색 변경
        }, 
        function() {
            // 마우스 아웃 시
            $('#bottomMenu').hide(); // 하단 카테고리 박스 숨기기
            $('#topMenu').css('background-color', ''); // 배경색 원래대로
        }
    );
});