<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
	<!-- 보안(시큐리티) 설정 -->
	<security-role>
		<role-name>admin</role-name>
	</security-role>
	
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>users</web-resource-name>
			<url-pattern>/noticewriteform.do</url-pattern>
			<http-method>GET</http-method>
		</web-resource-collection>
		<auth-constraint>
			<description>권한 사용자명</description>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
	
	<!-- 기본 인증 방식 -->
	<!-- <login-config>
		<auth-method>BASIC</auth-method>
	</login-config> -->
	
	<!-- 폼 기반 인증-->
	<login-config>
		<auth-method>FORM</auth-method>
		<form-login-config>
			<form-login-page>/member/adminlogin.jsp</form-login-page>
			<form-error-page>/member/loginfailed.jsp</form-error-page>
		</form-login-config>
	</login-config>
	
	<!-- 예외 및 오류 처리 -->
	<error-page>
		<error-code>500</error-code>
		<location>/exception/errorCode_error.jsp</location>
	</error-page>
	
	
</web-app>